* Glavni meni za knjigu primljenih racuna
*******************************************
LOCAL Izbor, nPredhIzbor

nPredhIzbor = 1
DO WHILE .T.

	MainWnd("K NJ I G A    P R I M L J E N I H    R A C U N A")

	Izbor = nPredhIzbor
	@ 7 ,27 PROMPT " UNOS STAVKE        " MESSAGE "PO SVIM OSNOVAMA"
	@ 8 ,27 PROMPT " IZMENA STAVKE      " MESSAGE "IZMENA STAVKI PO SVIM OSNOVAMA PO BR.RAC."
   @ 9 ,27 PROMPT " IZMENA STAVKE PO BR" MESSAGE "IZMENA STAVKI PO SVIM OSNOVAMA PO RBR"
	@ 10,27 PROMPT " LISTANJE STAVKI    " MESSAGE "LISTANJE STAVKI POMERANJEM EKRANA"
	@ 11,27 PROMPT " ZBIROVI KNJIGE     " MESSAGE "ZBIROVI PO SVIM KOLONAMA"
	@ 12,27 PROMPT " AZURIRA PDV        " MESSAGE "AZURIRA PDV IZ KALKULACIJA"
	@ 13,27 PROMPT " STAMPA KNJIGE      " MESSAGE "STAMPA OD DATUMA DO DATUMA"
	@ 14,27 PROMPT " KONTROLA DATUMA    " MESSAGE "KONTROLA DA LI SU SVI DATUMI RACUNA U PERIODU"
	@ 15,27 PROMPT " BRISANJE STAVKE    " MESSAGE "BRISANJE STAVKE IZ RACUNARA"
	@ 16,27 PROMPT " KONTROLA OBRAC.PDV " MESSAGE "KONTROLA OBRACUNATOG PDV KALK,PK1 OBA POLJA"
	@ 17,27 PROMPT " KONTROLA PRENE.PDV " MESSAGE "KONTROLA PRENETOG PDV KALK., PK 1 , KPR"
	@ 18,27 PROMPT " KONTROLA NABAVNE V " MESSAGE "KONTROLA NABAVNE VREDNOSTI , PK 1 , KPR"
	@ 19,27 PROMPT " PRAZNI KNJIGU KPR  " MESSAGE "OBRISE SVE STAVKE KOJE SE TICU KALKULACIJA;OSTAJU RUCNO UNETI"
	@ 20,27 PROMPT " NUMERISANJE KPR    " MESSAGE "NUMERISE KPR PO STAVKAMA"
	@ 21,27 PROMPT " STAMPA SPOJENE KNJ " MESSAGE "STAMPA SPOJENE KNJIGE"
	@ 22,27 PROMPT " KONTROLA RAS. KPR  " MESSAGE "KONTROLA RNVRRR + RPBEZ2 = UKSPDV"

	CLEAR TYPEAHEAD
	MENU TO Izbor
   * nPredhIzbor = Izbor

	DO CASE
		CASE Lastkey() = 27
			EXIT
		CASE Izbor = 1
			DO KPRUNOS
		CASE Izbor = 2
			DO KPRI
		CASE Izbor = 3
			DO KPRI1
		CASE Izbor = 4
      	DO KPRLIST
		CASE Izbor = 5
			DO KPRZBIR
		CASE Izbor = 6
			DO PREPPDVP
		CASE Izbor = 7
         DO KPRPRN
			* DO KPR11
		CASE Izbor = 8
			DO KPRZBIR1
		CASE Izbor = 9
			* DO KPRBRIS
			MessageBox("Zabranjeno brisanje!")
		CASE Izbor = 10
			DO KONTROLA
		CASE Izbor = 11
			DO KONTKPR1
		CASE Izbor = 12
			DO KPRNAB
		CASE Izbor = 13
			DO KPRKAL
		CASE Izbor = 14
			DO NUMKPR
		CASE Izbor = 15
			DO KPR11S
		CASE Izbor = 16
			DO PERANAB
	ENDCASE

ENDDO

RETURN
