LOCAL WPREZ, WIME, WIOCA, WADR, WTELS, WADRR, WTELR, WPORSIF, WPORSIFN
LOCAL WRBPIO, WMBRRAD, WSIFDEL, WZIRO, WDELSTR, WDELKOM, WNAZRAD
LOCAL WPOC, WKRAJ, WJMBG, WKONTROL

SELECT 0
USE OBVEZMAT
GO BOTTOM

DO WHILE .T.

	CLEAR SCREEN
	@ 0,0 TO 24,79 DOUBLE
	@ 1,1 SAY Centriraj("IZMENA MATICNIH PODATAKA", 78)
	
   DN = " "
   WPREZ    = PREZ
   WIME     = IME
   WIOCA    = IOCA
   WADR     = ADR
   WTELS    = TELS
   WADRR    = ADRR
   WTELR    = TELR
   WPORSIF  = PORSIF
   WPORSIFN = PORSIFN
   WMBRRAD  = MBRRAD
   WSIFDEL  = SIFDEL
   WZIRO    = ZIRO
   WDELSTR  = DELSTR
   WDELKOM  = DELKOM
   WPOC     = POC
   WKRAJ    = KRAJ
   WNAZRAD  = NAZRAD
   WJMBG    = JMBG
   WKONTROL = KONTROL
   WRBPIO   = RBPIO

   @ 2,5   SAY "PREZIME........ :" GET WPREZ
   @ 3,5   SAY "IME OCA  ...... :" GET WIOCA
   @ 4,5   SAY "IME............ :" GET WIME
   @ 6,5   SAY "ADRESA STANA... :" GET WADR
   @ 8,5   SAY "TEL. U STANU... :" GET WTELS
   @ 10,5  SAY "ADRESA RADNJE.. :" GET WADRR
   @ 11,5  SAY "TEL. U RADNJI.  :" GET WTELR
   @ 12,5  SAY "MAT.BR.RADNJE   :" GET WMBRRAD PICTURE "9999999999"
   @ 13,5  SAY "SIFRA DELATNOS. :" GET WSIFDEL PICTURE "9999999999"
   @ 14,5  SAY "POR. SIFRA....  :" GET WPORSIF
   @ 14,35 SAY "JMBG :" GET WJMBG
   @ 14,59 SAY "KONTROLNI :" GET WKONTROL PICTURE "99"
   @ 15,5  SAY "PIB OBVEZNIKA.  :" GET WPORSIFN
   @ 15,35 SAY "REG.BR. PIO :"     GET WRBPIO PICTURE "9999999999"
   @ 16,5  SAY "ZIRO RACUN....  :" GET WZIRO
   @ 18,5  SAY "STR  PDV  ....  :" GET WDELSTR
   @ 20,5  SAY "KOMISION  PDV   :" GET WDELKOM
   @ 18,30 SAY "DATUM POCETKA   :" GET WPOC
   @ 20,30 SAY "DATUM PRESTANKA :" GET WKRAJ
   @ 22,5  SAY "NAZIV RADNJE... :" GET WNAZRAD
   READ

   IF Lastkey() = 27
   	EXIT
   ENDIF

   @ 23,20 SAY "UPIS (D/N)? " GET DN PICTURE "!" VALID(DN $ "DN")
   READ

   IF Lastkey() = 27
   	EXIT
   ENDIF

   IF DN = "N"
   	EXIT
   ENDIF

   REPLACE PREZ    WITH WPREZ
   REPLACE IME     WITH WIME
   REPLACE IOCA    WITH WIOCA
   REPLACE ADR     WITH WADR
   REPLACE TELS    WITH WTELS
   REPLACE ADRR    WITH WADRR
   REPLACE TELR    WITH WTELR
   REPLACE MBRRAD  WITH WMBRRAD
   REPLACE SIFDEL  WITH WSIFDEL
   REPLACE PORSIF  WITH WPORSIF
   REPLACE PORSIFN WITH WPORSIFN
   REPLACE RBPIO   WITH WRBPIO
   REPLACE ZIRO    WITH WZIRO
   REPLACE DELSTR  WITH WDELSTR
   REPLACE DELKOM  WITH WDELKOM
   REPLACE POC     WITH WPOC
   REPLACE KRAJ    WITH WKRAJ
   REPLACE NAZRAD  WITH WNAZRAD
   REPLACE JMBG    WITH WJMBG
   REPLACE KONTROL WITH WKONTROL

   EXIT
ENDDO

USE

RETURN
