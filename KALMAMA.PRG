*******************************************
* Glavni meni za rad sa Kalkulacijama
*******************************************
LOCAL Izbor, nPredhIzbor

nPredhIzbor = 1
DO WHILE .T.

	MainWnd("GLAVNI MENI KALKULACIJA STR-a")

	Izbor = nPredhIzbor
	@ 6 ,27 PROMPT " IZRADA KALKULACIJE       " MESSAGE "IZRADA NOVE ILI NASTAVAK PREKINUTE"
	@ 8 ,27 PROMPT " KALKULACIJA NA EKRANU    " MESSAGE "PRIKAZ URADJENE KALKULACIJE NA EKRANU"
	@ 10,27 PROMPT " BRISANJE STAVKE          " MESSAGE "BRISE STAVKU KALKULACIJE"
	@ 12,27 PROMPT " BRISANJE KALKULACIJE     " MESSAGE "BRISE CELU KALKULACIJU"
	@ 14,27 PROMPT " STAMPANJE KALKULACIJE (F)" MESSAGE "STAMPA KALKULACIJU PO BROJU"
	@ 16,27 PROMPT " STAMPANJE KALK. OPSEG (F)" MESSAGE "STAMPA KALKULACIJU OD BROJA DO BROJA"
	@ 18,27 PROMPT " DNEVNIK KALKULACIJA      " MESSAGE "DNEVNIK KALKULACIJA ZA PERIOD"
	@ 20,27 PROMPT " PONISTAVANJE LAGERA      " MESSAGE "SVE KOLICINE NA NULU DA NE BI PITAO NA KALKULACIJI"
	@ 21,27 PROMPT " PROMENA BROJA KALKULACI. " MESSAGE "PROMENA BROJA KALKULACIJE AKO JE POGRESNO UPISAN"
	@ 22,27 PROMPT " ZBIR PRODAJNIH VREDNOSTI " MESSAGE "ZBIR PRODAJNIH VREDNOSTI PO KALKULACIJAMA"

	CLEAR TYPEAHEAD
	MENU TO Izbor
	* nPredhIzbor = Izbor

	DO CASE
		CASE Lastkey() = 27
			EXIT
		CASE Izbor = 1
			DO KALDMPM1
		CASE Izbor = 2
			DO KALUP01
		CASE Izbor = 3
			DO KDMPBST
		CASE Izbor = 4
			DO KALBKAL
		CASE Izbor = 5
			DO CIGSTAM2
		CASE Izbor = 6
			DO KLKSTAMP
		CASE Izbor = 7
			DO KDMPDNE
		CASE Izbor = 8
			DO ARTNUL
		CASE Izbor = 9
			DO BRISVERA
		CASE Izbor = 10
			DO ZBIRKAL
	ENDCASE

ENDDO

RETURN
