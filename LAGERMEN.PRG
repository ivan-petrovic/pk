*******************************************
* Glavni meni za Lager
*******************************************
LOCAL Izbor, nPredhIzbor

nPredhIzbor = 1
DO WHILE .T.

	MainWnd("LAGER ARTIKALA")
	
	Izbor = nPredhIzbor
	@ 6 ,27 PROMPT " TRENUTNA VREDNOST LAGERA " MESSAGE "VREDNOST VASEG LAGERA PO MALOPRODAJNIM CENAMA"
	@ 8 ,27 PROMPT " LAGER PO GRUPAMA ROBE    " MESSAGE "STAMPA LAGER JEDNE PRODAVNICE SORTIRAN PO GRUPAMA ROBE"
	@ 10,27 PROMPT " LAGER PO SIFRAMA ROBE    " MESSAGE "STAMPA LAGER JEDNE PRODAVNICE SORTIRAN PO SIFRAMA ROBE"
	@ 12,27 PROMPT " LAGER PO TARIFAMA        " MESSAGE "STAMPA LAGER PO TARIFAMA"
	@ 14,27 PROMPT " LAGER NULA KOLICINA      " MESSAGE "STAMPA LAGER ARTIKALA CIJE JE STANJE KOLICINA NULA"
	@ 16,27 PROMPT " LAGER BEZ P/P,P/P,SA P/P " MESSAGE "LAGER SA CENAMA BEZ P/P, P/P I CENE SA P/P"
	@ 18,27 PROMPT " LAGER BEZ P/P,P/P,SA P/P " MESSAGE "LAGER SA CENAMA BEZ P/P, P/P I CENE SA P/P PO KAL."

	CLEAR TYPEAHEAD
	MENU TO Izbor
	* nPredhIzbor = Izbor
	
	DO CASE
		CASE Lastkey() = 27
			EXIT
		CASE Izbor = 1
			DO LAGSTA
		CASE Izbor = 2
			DO KOMLAGER
		CASE Izbor = 3
			DO SIFLAGER
		CASE Izbor = 4
			DO LAGTARDD
		CASE Izbor = 5
			DO LAGNUL
		CASE Izbor = 6
			DO SIFLAGCE
		CASE Izbor = 7
			DO SLCEKAL
	ENDCASE
ENDDO

RETURN
