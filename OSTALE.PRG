*******************************************
* Glavni meni za podesavanja i pomocna f-je
*******************************************
LOCAL Izbor, nPredhIzbor

nPredhIzbor = 1
DO WHILE .T.

	MainWnd("GLAVNI MENI ZA PODESAVANJA I POMOCNE FUNKCIJE")

	Izbor = nPredhIzbor
	@ 10,27 PROMPT " REINDEX DATOTEKA        " MESSAGE "OSVEZAVA DATOTEKE U SLUCAJU NEREGULARNOSTI"
	@ 11,27 PROMPT " KONTROLA ZBIROVA        " MESSAGE "UPOREDNA ANALIZA KALKULACIJA,RASHODA I POREZA"
	@ 12,27 PROMPT " NUMERISANJE KNJIGA      " MESSAGE "NUMERISE KNJIGU PRIHOD-RASHOD I KNJIGU POREZA"
	@ 13,27 PROMPT " SPAJANJE KNJIGA         " MESSAGE "SPAJA KNJIGE DVA ILI TRI KORISNIKA NA KORISNIKA NA KOJEM STE"
	@ 14,27 PROMPT " PUNI RASHOD IZ KALKULAC." MESSAGE "NABAVNA VREDNOST UMANJENA ZA PRENETI POREZ DOBAVLJACA"
	@ 15,27 PROMPT " PUNI RASHOD IZ KALKULDR." MESSAGE "PUNI RASHOD IZ KALKULACIJA SA DODAVANJEM (APPEND)"
	@ 16,27 PROMPT " NOVA GODINA             " MESSAGE "PRENOS PODATAKA U NOVU GODINU"
	@ 17,27 PROMPT " KONTROLA PAZARA U KNJIGA" MESSAGE "KONTROLISE PAZARE U KNJIGAMA PRIHOD-RASHOD, POREZ, KIR, PAZAR"
	@ 18,27 PROMPT " KONTROLA PAZARA U PK 1  " MESSAGE "KONTROLISE DA LI SU POJEDINACNI PO TAR. = UKUPNOM PAZARU"
	@ 19,27 PROMPT " STAMPA RASHODA PERA     " MESSAGE "STAMPA RASHODA PERA"
   @ 20,27 PROMPT " KONTROLA KPR PERA       " MESSAGE "KONTROLA KPR PERA"
   @ 21,27 PROMPT " PODESAVANJA             " MESSAGE "NEKA PODESAVANJA PROGRAMA"

	CLEAR TYPEAHEAD
	MENU TO Izbor
	* nPredhIzbor = Izbor

	DO CASE
		CASE Lastkey() = 27
			EXIT
		CASE Izbor = 1
			DO DDREIND
		CASE Izbor = 2
			DO SPAS
		CASE Izbor = 3
			DO NUMRAS
		CASE Izbor = 4
			DO JELASTEL
		CASE Izbor = 5
			DO PUKARA
		CASE Izbor = 6
         DO PUNKALR1
		CASE Izbor = 7
			DO NOVAGOD1
		CASE Izbor = 8
			DO SPAS2
		CASE Izbor = 9
			DO RASREV
		CASE Izbor = 10
			DO PERADD
		CASE Izbor = 11
			DO KON01KPR
		CASE Izbor = 12
			DO SETTINGS
	ENDCASE
ENDDO

RETURN
