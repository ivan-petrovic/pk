WOBR = VAL("000000000000.00")
WPRE = VAL("000000000000.00")
WRAZ = VAL("000000000000.00")
RED = 80
SET DEVICE TO PRINT
*SET PRINT TO LISTA
SET PRINT ON
DO WHILE ! Eof()
   IF RED > 66
      RED = 2
      @ RED,0 SAY " BROJ KALK "
      @ RED,12 SAY " DAT KALK "
      @ RED,24 SAY "OBRACUNAT POREZ"
      @ RED,44 SAY "PRENETI POREZ"
      @ RED,61 SAY "POREZ ZA UPLATU"
      RED = RED + 1
      @ RED,0 SAY REPLI("-",80)
      RED = RED + 1
   ENDIF
   @ RED,0 SAY KAL
   @ RED,12 SAY DAT
   @ RED,24 SAY POR PICTURE "999,999,999.99"
   @ RED,44 SAY ODDOB PICTURE "999,999,999.99"
   @ RED,64 SAY RAZ PICTURE "999,999,999.99"
   WOBR = ROUND(WOBR + POR,2)
   WPRE = ROUND(WPRE + ODDOB,2)
   WRAZ = ROUND(WRAZ + RAZ,2)
   RED = RED + 1
   SKIP
ENDDO
@ RED,0 SAY REPLI("-",80)
RED = RED + 1
@ RED,24 SAY WOBR PICTURE "999,999,999.99"
@ RED,44 SAY WPRE PICTURE "999,999,999.99"
@ RED,64 SAY WRAZ PICTURE "999,999,999.99"
RED = RED + 1
@ RED,0 SAY " "
EJECT
SET DEVICE TO SCREEN
SET PRINT OFF
CLOSE DATABASES
CLEAR SCREEN
RETURN

