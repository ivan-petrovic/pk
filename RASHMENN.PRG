nPredhIzbor = 1
DO WHILE .T.

	MainWnd("KNJIGA PRIHODA I RASHODA")

	Izbor = nPredhIzbor
	@ 6 ,27 PROMPT " UNOS STAVKE PRIHOD-RASHOD     " MESSAGE "PO POPISU ILI NIVELACIJI"
