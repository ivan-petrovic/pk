	@ 12,27 PROMPT " LISTANJE STAVKI SVE VIDLJIVO  " MESSAGE "LISTANJE STAVKI POMERANJEM EKRANA"
	@ 13,27 PROMPT " ZBIROVI KNJIGE PRIHOD-RASHOD  " MESSAGE "ZBIROVI PO SVIM KOLONAMA KNJIGE RASHODA"
	@ 14,27 PROMPT " ZBIROVI KNJIGE PO BROJU       " MESSAGE "ZBIROVI PO SVIM KOLONAMA KNJIGE RASHODA"
