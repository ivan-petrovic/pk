	@ 21,27 PROMPT " AZURIRA PK 1 IZ PAZARA        " MESSAGE "AZURIRA PAZAR IZ PAZDATA U PK 1"
	@ 22,27 PROMPT " AZURIRA POREZ U PK1           " MESSAGE "AZURIRA POLJE POREZA ZA ONE STAVKE GDE IMA PAZARA"

	CLEAR TYPEAHEAD
	MENU TO Izbor
	* nPredhIzbor = Izbor

	DO CASE
		CASE Lastkey() = 27
			EXIT
		CASE Izbor = 1
			DO RASPUNN
		CASE Izbor = 2
			DO RASIZMN
		CASE Izbor = 3
			DO RASBRISN
		CASE Izbor = 4
			DO RASL1
		CASE Izbor = 5
			DO RASHZB01
		CASE Izbor = 6
			DO RASHZB02
		CASE Izbor = 7
			DO BILUSPH
		CASE Izbor = 8
			DO PREPPDV
		CASE Izbor = 9
			DO PREPPAZ
		CASE Izbor = 10
			* DO PKPRN
			DO KK11
		CASE Izbor = 11
			DO RASLISTN
		CASE Izbor = 12
			DO RASLISNN
		CASE Izbor = 13
			DO PAZSPEC1
		CASE Izbor = 14
			DO PK1POR
	ENDCASE

ENDDO

RETURN
