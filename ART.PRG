*******************************************
* Glavni meni za Artikle
*******************************************
LOCAL Izbor, nPredhIzbor

nPredhIzbor = 1
DO WHILE .T.

	MainWnd("GLAVNI MENI ARTIKALA")
	Izbor = nPredhIzbor
	@ 6 ,27 PROMPT " UPIT PO DELU NAZIVA    " MESSAGE "LISTA SVE ARTIKLE KOJI SADRZE UNETI DEO"
	@ 8 ,27 PROMPT " UNOS ARTIKLA           " MESSAGE "OTVARANJE NOVE SIFRE ARTIKLA"
	@ 10,27 PROMPT " IZMENA ARTIKLA         " MESSAGE "IZMENA PODATAKA O ARTIKLU"
	@ 12,27 PROMPT " BRISANJE ARTIKLA       " MESSAGE "BRISANJE ARTIKLA IZ EVIDENCIJE"
	@ 14,27 PROMPT " LISTANJE ARTIKALA      " MESSAGE "PRIKAZ POSTOJECIH ARTIKALA NA EKRANU"
	@ 16,27 PROMPT " LISTA PO GRUPI ROBE    " MESSAGE "LISTA SVE ARTIKLE VEZANE ZA JEDNU GRUPU ROBE"
	@ 17,27 PROMPT " IZVESTAJ O ARTIKLU     " MESSAGE "STAMPA NABAVKU I PRODAJU ARTIKALA U PERIODU"
	@ 18,27 PROMPT " IZVESTAJ O ARTIKLU SVE " MESSAGE "STAMPA NABAVKU I PRODAJU ARTIKALA"
	@ 19,27 PROMPT " LAGER                  " MESSAGE "STAMPA LAGERA I STAMPA ARTIKALA SA STANJEM NULA"
	@ 20,27 PROMPT " NABAVKA PO GRUPI ROBE  " MESSAGE "PREGLED NABAVKE ROBE PO GRUPI U ZADATOM PERIODU"
	@ 21,27 PROMPT " LIST DPU (F)           " MESSAGE "LIST DNEVNOG PROMETA UGOSTITELJA (poslednja kolona je 6 x 10)"
   @ 22,27 PROMPT " LIST DPU1 (F)          " MESSAGE "LIST DNEVNOG PROMETA UGOSTITELJA (poslednja kolona je 11 + 12)"

	MENU TO Izbor
	* nPredhIzbor = Izbor
	
	DO CASE
		CASE LASTKEY() = 27
			EXIT
		CASE Izbor = 1
			DO ARTUPIT
		CASE Izbor = 2
			DO ARTUNOS
		CASE Izbor = 3
			DO ARPIZME
		CASE Izbor = 4
			DO ARTBRIS
		CASE Izbor = 5
			DO ARTLIST
		CASE Izbor = 6
			DO SIFLIS
		CASE Izbor = 7
			DO ARTIZV
		CASE Izbor = 8
			DO ARTIZV1
		CASE Izbor = 9
			DO LAGERMEN
		CASE Izbor = 10
			DO ARTGRIZV
		CASE Izbor = 11
			DO DPU
		CASE Izbor = 12
			DO DPU1
	ENDCASE

ENDDO
           
RETURN
