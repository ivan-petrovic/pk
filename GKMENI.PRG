	@ 12,27 PROMPT " PROBLEMATIKA  P D V      " MESSAGE "EVIDENCIJA PRENETOG POREZA ZA PDV"
	@ 14,27 PROMPT " KNJIGA IZLAZNIH RACUNA   " MESSAGE "MODUL KNJIGE KIR"
	@ 15,27 PROMPT " KNJIGA PRIHODA           " MESSAGE "MODUL KNJIGE PRIHODA"
	@ 16,27 PROMPT " KNJIGA POREZA NA PROMET  " MESSAGE "MODUL KNJIGE POREZA"
