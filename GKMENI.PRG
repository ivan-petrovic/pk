	@ 22,27 PROMPT " KNJIGA PAUSALNO OPOREZ.  " MESSAGE "EVIDENCIJA PAUSALNO OPOREZOVANIH"

	CLEAR TYPEAHEAD
	MENU TO Izbor
	* nPredhIzbor = Izbor

	DO CASE
		CASE Lastkey() = 27
			EXIT
		CASE Izbor = 1
			DO RASHMENN
		CASE Izbor = 2
			DO KPRMEN
		CASE Izbor = 3
			DO ZIRMEN
		CASE Izbor = 4
			DO KPCMENI
		CASE Izbor = 5
			DO KIRMEN
		CASE Izbor = 6
			DO PRIHMEN
		CASE Izbor = 7
			DO POREZNN
		CASE Izbor = 8
			DO KPORMEN
		CASE Izbor = 9
			DO TRGOVAC
		CASE Izbor = 10
			DO PPPDV
		CASE Izbor = 11
			DO PLACPOR
		CASE Izbor = 12
			DO VIRPDV05
		CASE Izbor = 13
			DO EPOMEN
	ENDCASE

ENDDO

RETURN
