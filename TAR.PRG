*******************************************
* Glavni meni za Tarife
*******************************************
LOCAL TIzbor, nPredhIzbor

nPredhIzbor = 1
DO WHILE .T.

	MainWnd("GLAVNI MENI TARIFA")

	TIzbor = nPredhIzbor
	@ 8,27  PROMPT " UNOS TARIFA             " MESSAGE "OTVARANJE NOVE TARIFE"
	@ 10,27 PROMPT " IZMENA TARIFE           " MESSAGE "IZMENA PODATAKA O TARIFNOM BROJU"
	@ 12,27 PROMPT " BRISANJE TARIFE         " MESSAGE "BRISANJE TARIFE"
	@ 14,27 PROMPT " LISTANJE TARIFA         " MESSAGE "PRIKAZ POSTOJECIH TARIFA NA EKRANU"
	@ 16,27 PROMPT " PROMENA TARIFA ARTIKALA " MESSAGE "PROMENA JEDNE TARIFE DRUGOM TARIFOM U DATOTECI ARTIKALA"

	MENU TO TIzbor
	nPredhIzbor = TIzbor
	
	DO CASE
		CASE Lastkey() = 27
			EXIT
		CASE TIZBOR = 1
			DO TARUNOS
		CASE TIZBOR = 2
			DO TARIZME
		CASE TIZBOR = 3
			DO TARBRIS
		CASE TIZBOR = 4
			DO TARLIST
		CASE TIZBOR = 5
			DO AVRAMTAR
	ENDCASE
ENDDO
       
RETURN
