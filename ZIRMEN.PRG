*******************************************
* Glavni meni za izbor posla ziroracuna
*******************************************
LOCAL Izbor, nPredhIzbor

nPredhIzbor = 1
DO WHILE .T.

	MainWnd("K NJ I G A   Z I R O  R A C U N A")

	Izbor = nPredhIzbor
	@ 8,27  PROMPT " UNOS   ZIRO RACUNA      " MESSAGE "UNOS STAVKI ZIRO RACUNA"
	@ 10,27 PROMPT " IZMENA  ZIRO RACUNA     " MESSAGE "IZMENA STAVKE ZIRO RACUNA"
	@ 11,27 PROMPT " LISTANJE SVE VIDLJIVO   " MESSAGE "LISTANJE KNJIGE OD POCETKA DO KRAJA"
	@ 12,27 PROMPT " LISTANJE ZIRO RACUNA    " MESSAGE "LISTANJE KNJIGE OD POCETKA DO KRAJA"
	@ 14,27 PROMPT " PRIPAJANJE U PRIH.RASH. " MESSAGE "PRIPAJANJE U KNJIGU PRIHOD RASHOD"
	@ 16,27 PROMPT " STAMPA ZIRO RACUNA      " MESSAGE "STAMPANJE KNJIGE OD DATUMA DO DATUMA"
	@ 18,27 PROMPT " STAMPA PORESKE PRIJAVE  " MESSAGE "STAMPANJE PORESKE PRIJAVE  OD DATUMA DO DATUMA"
	@ 19,27 PROMPT " STAMPA PORESKE PRIJAVE 1" MESSAGE "STAMPANJE PORESKE PRIJAVE  OD DATUMA DO DATUMA SKUPLJENO"
	@ 20,27 PROMPT " PORESKA PRIJAVA EKRAN   " MESSAGE "STAMPANJE PORESKE PRIJAVE  OD DATUMA DO DATUMA NA EKRANU"
	@ 21,27 PROMPT " SREDJUJE BAZU IZVODA    " MESSAGE "PUSTITI SAMO JEDNOM"
	@ 22,27 PROMPT " OTVARANJE BANAKA        " MESSAGE "ZA IZVODE RAZLICITIH BANAKA"

	CLEAR TYPEAHEAD
	MENU TO Izbor
	* nPredhIzbor = Izbor
	
	DO CASE
		CASE Lastkey() = 27
			EXIT
		CASE Izbor = 1
			DO GKZPUN
		CASE Izbor = 2
			DO GKZIZME
		CASE Izbor = 3
			DO GKZLIST2
		CASE Izbor = 4
			DO GKZLIST
		CASE Izbor = 5
			DO ZIRPRIV
		CASE Izbor = 6
			DO GKZSTAMP
		CASE Izbor = 7
			DO ZIRPOR
		CASE Izbor = 8
			DO ZIRPOR1
		CASE Izbor = 9
			DO ZIRPORV
		CASE Izbor = 10
			* DO SREDZIR
         MessageBox("Neaktivna opcija")
		CASE Izbor = 11
			DO BANKMENI
	ENDCASE

ENDDO

RETURN
